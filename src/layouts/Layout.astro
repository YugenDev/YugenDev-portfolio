---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import "@fontsource/libre-baskerville";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="relative text-black dark:text-white">
    <div
      class="absolute top-0 z-[-2] min-h-screen min-w-screen bg-neutral-950 bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))]"
    >
    </div>
    <Header />
    <slot />
    <Footer />
  </body>
</html>

<style :is-global>
  :root {
    color-scheme: light dark;
  }

  html {
    font-family: "Libre Baskerville", serif;
    scroll-behavior: smooth;
  }

  body {
    display: flex;
    flex-direction: column;
    background-color: black;
    min-height: 100vh;
  }

  @media (preferes-reduce-motion: reduce) {
    html {
      scroll-behavior: auto;
    }
  }
</style>
